{
  "manifest_version": 2,

  "name": "Reading Time",
  "description": "Display the reading time of any web page",
  "version": "1.0",
  "options_page": "html/options.html",

  "browser_action": {
    "default_title": "Estimated time to read the current page (minutes)"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "run_at" : "document_end",
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}