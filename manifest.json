{
  "manifest_version": 2,

  "name": "Instant Reading Time",
  "description": "Display the reading time of the users current web page.",
  "version": "1.0",
  "options_page": "html/options.html",

  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },

  "browser_action": {
    "default_title": "Estimated time to read the current page (minutes)"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "run_at" : "document_end",
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "background"
  ]
}